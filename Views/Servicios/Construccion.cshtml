            </a>
            }
        <h2>Proceso de Construccion</h2>
          @foreach (var procesoConstruccion in item.procesoConstruccion){
          <ul><li> @procesoConstruccion.procesoConstruccion</li></ul>
                      
          }
          
        }     
      </div>
      <div class="col-4" style="text-align: right ;">
        @foreach (var item in Model){
            <img src="@item.imagenConstruccion" alt="" width="546px" height="340px">
        }
            <br>
            <br>
        <a asp-action="Contacto" asp-controller="Contacto">
          <button type="button" class="btn btn-dark" style="background-color: red;">  
            Adquirir Servicios 
