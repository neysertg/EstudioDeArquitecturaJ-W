<div class="container">
  <div class="row">
      <div class="col-6" style="text-align: left;">
        @foreach (var item in Model){
        <p>@Html.DisplayFor(modelItem => item.descripcionConstruccion)</p>
            @if(User.Identity.IsAuthenticated){
            <a asp-action="ModificarConstruccion" asp-route-id="@item.id">
